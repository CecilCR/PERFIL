<script>
    function calcularResultados() {
        const q1 = parseInt(document.getElementById('q1').value);
        const l6 = document.querySelector('input[name="locus6"]:checked')?.value;
        
        const resultsArea = document.getElementById('results-area');
        const content = document.getElementById('analysis-content');
        
        resultsArea.classList.remove('d-none');
        
        let perfilLocus = l6 === 'b' ? "Locus de Control Interno (Proactivo)" : "Locus de Control Externo (Reactivo)";
        
        content.innerHTML = `
            <p><strong>Tendencia de Planificación:</strong> Tu nivel de acuerdo con planes claros es de ${q1}/5.</p>
            <p><strong>Orientación de Control:</strong> Posees un <strong>${perfilLocus}</strong>.</p>
            <div class="alert alert-info">
                <strong>Reflexión Sugerida:</strong> ¿Cómo influye tu percepción de control en la gestión de tus relaciones académicas y profesionales?
            </div>
        `;
        
        window.scrollTo(0, document.body.scrollHeight);
    }
</script>

