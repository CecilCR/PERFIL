    const ambData = [
        "Un experto sin respuesta definitiva probablemente no sepa demasiado.",
        "Me gustaría vivir en el extranjero durante un tiempo.",
        "No existe tal cosa como un problema sin solución.",
        "Quien ajusta su vida a un horario pierde alegría.",
        "Un buen trabajo es donde siempre está claro qué hacer.",
        "Es más divertido atacar un problema complicado.",
        "Se logra más resolviendo problemas sencillos que grandes.",
        "Personas interesantes no les importa ser originales.",
        "Siempre es preferible lo familiar que lo extraño.",
        "Quienes insisten en sí o no desconocen la complejidad.",
        "Vida estable sin sorpresas es de agradecer.",
        "Decisiones importantes se basan en información insuficiente.",
        "Prefiero fiestas con conocidos que con extraños.",
        "Tareas ambiguas dan oportunidad de iniciativa.",
        "Cuanto antes tengamos valores similares, mejor.",
        "Un buen maestro hace pensar al alumno."
    ];

    // Cargar Preguntas
    window.onload = function() {
        const c1 = document.getElementById('cog-container');
        cogData.forEach((p, i) => {
            c1.innerHTML += `<div class="question-row"><label class="form-label">${i+1}. ${p}</label><input type="range" class="form-range" min="1" max="5" id="cog_${i}"></div>`;
        });
        const c2 = document.getElementById('locus-container');
        locusData.forEach(p => {
            c2.innerHTML += `<div class="question-row"><p><b>${p.id}.</b> Seleccione:</p>
                <input type="radio" name="loc_${p.id}" value="a"> a) ${p.a}<br>
                <input type="radio" name="loc_${p.id}" value="b"> b) ${p.b}</div>`;
        });
        const c3 = document.getElementById('amb-container');
        ambData.forEach((p, i) => {
            c3.innerHTML += `<div class="question-row"><label class="form-label">${i+1}. ${p}</label><input type="range" class="form-range" min="1" max="7" id="amb_${i}"></div>`;
        });
    }

    function procesarPerfil() {
        let locScore = 0;
        locusData.forEach(q => {
            const sel = document.querySelector(`input[name="loc_${q.id}"]:checked`);
            if(sel && !q.f && sel.value === q.ext) locScore++;
        });

        document.getElementById('results-area').style.display = 'block';
        document.getElementById('results-content').innerHTML = `
            <div class="alert alert-info">
                <h4>Puntaje Locus de Control: ${locScore}</h4>
                <p>${locScore <= 11 ? "<b>Interpretación: Locus de Control Interno.</b> Crees que tus resultados dependen de tus propias acciones." : "<b>Interpretación: Locus de Control Externo.</b> Crees que factores externos influyen en tus resultados."}</p>
            </div>
            <p class="mt-4"><i>Complete el análisis detallado en su archivo REFLEXION.md basado en estos resultados.</i></p>
        `;
        window.scrollTo(0, document.body.scrollHeight);
    }
</script>
